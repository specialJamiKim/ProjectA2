<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- ImageView for displaying image -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvReservationDateTitle"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:fontFamily="@font/puradak_gentle_gothic"
            android:text="예약일" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000" />

        <TextView
            android:id="@+id/tvCenterNameTitle"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:fontFamily="@font/puradak_gentle_gothic"
            android:text="센터명" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000" />

        <TextView
            android:id="@+id/tvAddressTitle"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="1"
            android:fontFamily="@font/puradak_gentle_gothic"
            android:text="주소" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvReservationDate"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0000-00-00"
            android:fontFamily="@font/puradak_gentle_gothic"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tvCenterName"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="일이삼사오육칠팔구"
            android:fontFamily="@font/puradak_gentle_gothic"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="1"
            android:fontFamily="@font/puradak_gentle_gothic"
            android:text="일이삼사오육칠팔구" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnTicketUsed"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.2"
            android:background="@drawable/buttonshape4"
            android:fontFamily="@font/puradak_gentle_gothic"
            android:onClick="onTicketUsedButtonClick"
            android:text="사용"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnReservationCancel"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_weight="0.2"
            android:background="@drawable/buttonshape2"
            android:fontFamily="@font/puradak_gentle_gothic"
            android:onClick="onReservationCancelButtonClick"
            android:text="취소"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>
